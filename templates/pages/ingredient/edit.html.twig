{% extends 'base.html.twig' %}

{% block body %}

    <section class="py-5 text-center container">
        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto count">
                <h1 class="fw-light">Modify ingredient</h1>
                <p class="lead text-body-secondary">Please write a name and input the price for each ingredient.</p>
            </div>
        </div>
    </section>

    <div class="album py-5 bg-body-tertiary">
        <div class="container">
            <div class="row">
                {{ form_start(form) }}
                <div class="col">
                    {{ form_row(form.name) }}
                    <div class="form-errors">
                        {{ form_errors(form.name) }}
                    </div>
                </div>
                <div class="col">
                    {{ form_row(form.price) }}
                    <div class="form-errors">
                        {{ form_errors(form.price) }}
                    </div>
                </div>
                <div class="col">
                    {{ form_row(form.submit) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>

    </div>
{% endblock %}